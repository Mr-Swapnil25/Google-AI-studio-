rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function: Check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function: Get the user's role from their profile
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Users collection: Users can only read/write their own documents
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false; // Prevent accidental deletions
    }
    
    // Farmers collection: Public read, only owner can write
    match /farmers/{farmerId} {
      allow read: if true; // Public profiles
      allow create: if isOwner(farmerId);
      allow update: if isOwner(farmerId);
      allow delete: if false;
    }
    
    // Farmer KYC: Only owner can read/write their own KYC data
    match /farmerKYC/{farmerId} {
      allow read: if isOwner(farmerId);
      allow create: if isOwner(farmerId);
      allow update: if isOwner(farmerId);
      allow delete: if false;
    }
    
    // Products collection: Public read, only farmers can create/edit their own products
    match /products/{productId} {
      allow read: if true; // Public product listings
      allow create: if isAuthenticated() 
                    && request.resource.data.farmerId == request.auth.uid;
      allow update: if isAuthenticated() 
                    && resource.data.farmerId == request.auth.uid;
      allow delete: if isAuthenticated() 
                    && resource.data.farmerId == request.auth.uid;
    }
    
    // Negotiations: Only participants can read/write
    match /negotiations/{negotiationId} {
      allow read: if isAuthenticated() 
                  && (resource.data.buyerId == request.auth.uid 
                      || resource.data.farmerId == request.auth.uid);
      allow create: if isAuthenticated() 
                    && request.resource.data.buyerId == request.auth.uid;
      allow update: if isAuthenticated() 
                    && (resource.data.buyerId == request.auth.uid 
                        || resource.data.farmerId == request.auth.uid);
      allow delete: if false;
    }
    
    // Messages: Only negotiation participants can read/write
    match /messages/{messageId} {
      allow read: if isAuthenticated() 
                  && (resource.data.buyerId == request.auth.uid 
                      || resource.data.farmerId == request.auth.uid);
      allow create: if isAuthenticated() 
                    && (request.resource.data.buyerId == request.auth.uid 
                        || request.resource.data.farmerId == request.auth.uid)
                    && request.resource.data.senderId == request.auth.uid;
      allow update: if false; // Messages are immutable
      allow delete: if false;
    }
    
    // Transactions: Only farmer can read their own transactions
    match /transactions/{transactionId} {
      allow read: if isAuthenticated() 
                  && resource.data.farmerId == request.auth.uid;
      allow create: if isAuthenticated(); // Created by system on negotiation acceptance
      allow update: if isAuthenticated() 
                    && resource.data.farmerId == request.auth.uid;
      allow delete: if false;
    }
    
    // Wallets: Only owner can read/write their wallet
    match /wallets/{farmerId} {
      allow read: if isOwner(farmerId);
      allow write: if isOwner(farmerId);
    }
    
    // Market rates: Public read, admin-only write (no write rules for regular users)
    match /marketRates/{rateId} {
      allow read: if true;
      allow write: if false; // Admin only via Firebase Admin SDK
    }
  }
}
